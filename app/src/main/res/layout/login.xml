<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstName"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    tools:context=".register">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/scrollview"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/RegNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/id"
                android:drawablePadding="10dp"
                android:hint="EmployeeId"
                android:inputType="text"
                android:lines="1"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#234AAE"

                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#2336AE"
                android:textColorLink="#1D44A6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/WelcomeText" />

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:hint="FirstName"
                android:maxLength="15"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#234AAE"

                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#2336AE"
                android:textColorLink="#1D4BA6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RegNo" />

            <EditText
                android:id="@+id/SecondName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:maxLength="15"
                android:inputType="text"
                android:hint="SecondName"
                android:lines="1"
                android:padding="10dp"
                android:textColor="#233AAE"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#233AAE"
                android:textColorLink="#1D2FA6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FirstName" />

            <EditText
                android:id="@+id/ThirdName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="text"
                android:lines="1"
                android:maxLength="40"
                android:padding="10dp"
                android:textColor="#2356AE"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#2341AE"
                android:textColorLink="#1D34A6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SecondName" />
            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="15"
                android:padding="10dp"
                android:textColor="#2356AE"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#2341AE"
                android:textColorLink="#1D34A6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ThirdName" />

            <EditText
                android:maxLength="9"
                android:inputType="text"
                android:id="@+id/Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/id"
                android:drawablePadding="10dp"
                android:hint="Id Number"
                android:lines="1"
                android:padding="10dp"
                android:textColor="#2823AE"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#2351AE"
                android:textColorLink="#1D34A6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Password" />

            <EditText
                android:id="@+id/PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:maxLength="15"
                android:inputType="text"
                android:background="@drawable/background"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                android:hint="Phone Number"
                android:lines="1"
                android:padding="10dp"
                android:textColor="#2356AE"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#233AAE"
                android:textColorLink="#1D3BA6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Id" />

            <Spinner

                android:id="@+id/schoolsSpinner"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:focusable="auto"
                android:labelFor="@id/Id"
                android:layerType="none"
                android:popupBackground="@color/green"
                android:popupTheme="@color/green"
                android:spinnerMode="dropdown"
                android:tag="Course"
                tools:listheader="Deparment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PhoneNumber"
                tools:listitem="Courses" />

            <Spinner

                android:id="@+id/coursesSpinner"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:focusable="auto"
                android:labelFor="@id/Id"
                android:layerType="none"
                android:popupBackground="@color/green"
                android:popupTheme="@color/green"
                android:spinnerMode="dropdown"
                android:tag="Course"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schoolsSpinner"
                tools:listitem="Courses" />


            <TextView
                android:id="@+id/WelcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Add Employee"
                android:textAllCaps="true"
                android:textColor="#308730"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/registerButton" />

            <EditText
                android:tooltipText="Nssf"
                android:id="@+id/Nssf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="10dp"
                android:hint="Nssf"
                android:inputType="text"
                android:lines="1"
                android:maxLength="15"
                android:padding="10dp"
                android:textColor="#2356AE"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#233AAE"
                android:textColorLink="#1D3BA6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coursesSpinner" />

            <Spinner

                android:id="@+id/genderSpinner"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:focusable="auto"
                android:labelFor="@id/Id"
                android:layerType="none"
                android:popupBackground="@color/green"
                android:popupTheme="@color/green"
                android:spinnerMode="dropdown"
                android:tag="Course"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Nssf"
                tools:listitem="Nssf" />
            <Button

                android:layout_margin="20dp"
                android:id="@+id/register"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:width="300dp"
                android:textColor="@color/white"
                android:clickable="true"
                android:text="Register"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genderSpinner" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>